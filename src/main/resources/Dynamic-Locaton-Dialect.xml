<?xml version="1.0" encoding="UTF-8"?>

<dialect xmlns="http://www.thymeleaf.org/extras/dialect"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.thymeleaf.org/extras/dialect
                      http://www.thymeleaf.org/xsd/thymeleaf-extras-dialect-3.0.xsd"
         prefix="awdl"
         namespace-uri="http://www.thymeleaf.org/awdl"
         namespace-strict="false"
         class="com.github.ayongw.thymeleaf.dynamicurl.dialect.DynamicResourceLocationDialect">

    <!-- URL and form-specific attribute processors -->
    <!-- ========================================== -->

    <attribute-processor
            name="href"
            class="com.github.ayongw.thymeleaf.dynamicurl.processor.DynamicHrefAttributeTagProcessor">

    </attribute-processor>

    <attribute-processor
            name="src"
            class="com.github.ayongw.thymeleaf.dynamicurl.processor.DynamicSrcAttributeTagProcessor"/>

    <attribute-processor
            name="url"
            class="com.github.ayongw.thymeleaf.dynamicurl.processor.DynamicUrlAttributeTagProcessor"/>

